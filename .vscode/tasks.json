{
  "tasks": [
    {
      "type": "shell",
      "label": "g++ build library",
      "command": "/usr/bin/g++",
      "args": [
        "-Og",
        "-g",
        "-Ilibcapgen",
        "${workspaceFolder}/libcapgen/**/*.cpp",
        "-o",
        "${workspaceFolder}/bin/libcapgen"
      ]
    },
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    }
  ],
  "version": "2.0.0"
}